{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [
      1,
      {
        "js": "always",
        "json": "always"
      }
    ],
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "no-alert": "off",
    "no-undef": "off",
    "operator-linebreak": "off",
    "quotes": "off",
    "comma-dangle": "off",
    "no-else-return": "off",
    "sort-imports": ["error", {
      "ignoreCase": true,
      "ignoreDeclarationSort": true,
      "ignoreMemberSort": true,
      "memberSyntaxSortOrder": ["none", "all", "multiple", "single"],
      "allowSeparatedGroups": true
    }]
  },
  "ignorePatterns": ["dist/", "build/"]
}
